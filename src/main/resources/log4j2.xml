<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%m%n" />
		</Console>
		<File name="file" fileName="./logs/database_setting.log" append="true">
			<PatternLayout pattern="[%d{yyyy-MM-dd}] %m%n" />
		</File>
	</Appenders>

	<Loggers>
		<Logger name="database_setting" level="trace" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="file" />
		</Logger>
	</Loggers>
</Configuration>